# Domain Configuration
DOMAIN=yourdomain.com
TZ=America/New_York

# Cloudflare Configuration
# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone:DNS:Edit
CF_EMAIL=your-email@example.com
CF_API_TOKEN=your-cloudflare-api-token

# Pi-hole Configuration
PIHOLE_PASSWORD=your-secure-pihole-password

# Keycloak Configuration
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=your-secure-db-password
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your-secure-admin-password

# Watchtower Email Notifications (Optional)
# Set WATCHTOWER_NOTIFICATIONS=email to enable
WATCHTOWER_NOTIFICATIONS=none
WATCHTOWER_EMAIL_FROM=
WATCHTOWER_EMAIL_TO=
WATCHTOWER_EMAIL_SERVER=
WATCHTOWER_EMAIL_PORT=
WATCHTOWER_EMAIL_USER=
WATCHTOWER_EMAIL_PASSWORD=