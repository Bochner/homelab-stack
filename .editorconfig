# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,js,ts}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 120

[Dockerfile*]
indent_style = space
indent_size = 2

[*.env*]
insert_final_newline = false
