{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Validate Compose Files",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "config"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start All Services",
      "type": "shell",
      "command": "./setup.sh",
      "args": ["--skip-setup"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop All Services",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Health Check",
      "type": "shell",
      "command": "python3",
      "args": ["scripts/health_check.py"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Integration Tests",
      "type": "shell",
      "command": "python3",
      "args": ["scripts/test_integration.py"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "View Traefik Logs",
      "type": "shell",
      "command": "docker",
      "args": ["logs", "-f", "traefik"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "View Pi-hole Logs",
      "type": "shell",
      "command": "docker",
      "args": ["logs", "-f", "pihole"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "View All Service Status",
      "type": "shell",
      "command": "docker",
      "args": ["ps", "--format", "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Update Service Images",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "pull"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint YAML Files",
      "type": "shell",
      "command": "yamllint",
      "args": ["."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint Shell Scripts",
      "type": "shell",
      "command": "find",
      "args": [".", "-name", "*.sh", "-exec", "shellcheck", "{}", "+"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Check Container Vulnerabilities",
      "type": "shell",
      "command": "docker",
      "args": ["run", "--rm", "-v", "/var/run/docker.sock:/var/run/docker.sock",
               "aquasec/trivy", "image", "--format", "table", "traefik:v3.0"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Generate Environment Template",
      "type": "shell",
      "command": "cp",
      "args": [".env.example", ".env"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Extract Service Config",
      "type": "shell",
      "command": "python3",
      "args": ["scripts/extract_service.py", "${input:serviceName}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Check Network Status",
      "type": "shell",
      "command": "docker",
      "args": ["network", "inspect", "homelab_net"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "serviceName",
      "description": "Service name to extract",
      "default": "traefik",
      "type": "pickString",
      "options": [
        "traefik",
        "pihole",
        "keycloak",
        "keycloak-db",
        "uptime-kuma",
        "dockge",
        "homepage",
        "watchtower"
      ]
    }
  ]
}
